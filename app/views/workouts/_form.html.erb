<%= simple_form_for @workout,
  html: { class: 'form-horizontal' },
  wrapper: :horizontal_form,
  wrapper_mappings: {
    file: :horizontal_file_input,
  } do |f| %>


<%= f.error_notification %>
<%= f.input :date %>
<%= f.input :title %>
<%= f.input :description %>
<%= f.association :sport %>
<%= f.input :tss %>
<%= f.input :duration %>

<%= f.button :submit, "Add workout", class: "btn btn-success btn-lg"%>

<% end %>
