<%= simple_form_for @workout,
html: { class: 'form-horizontal' },
wrapper: :horizontal_form do |f| %>

    <%= f.error_notification %>
    <%= f.input :date, as: :string, wrapper: :horizontal_form %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.association :sport %>
    <%= f.input :tss %>
    <%= f.input :duration %>
    <%= f.input :finished, wrapper: :horizontal_form %>
    <%= f.input :distance %>
    <%= f.button :submit, "Add workout", class: "btn btn-success btn-lg"%>
<% end %>
