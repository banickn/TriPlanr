<div class="row">
<div class="col-md-6 col-md-offset-1">
<div class="panel panel-default">
  <div class="panel-body">
<%= simple_form_for @workout,
  html: { class: 'form-horizontal' },
  wrapper: :horizontal_form,
  wrapper_mappings: {
    file: :horizontal_file_input,
  } do |f| %>


<%= f.error_notification %>
<%= f.input :date, as: :date, html5: true, wrapper: :horizontal_form %>
<%= f.input :title %>
<%= f.input :description %>
<%= f.association :sport %>
<%= f.input :tss %>
<%= f.input :duration %>

<%= f.button :submit, "Add workout", class: "btn btn-success btn-lg"%>

<% end %>
</div>
</div>
</div>
</div>