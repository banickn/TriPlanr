<%= simple_form_for(@periodization_week) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :kind %>
    <%= f.input :goal_ctl_bike %>
    <%= f.input :goal_ctl_run %>
    <%= f.input :goal_ctl_swim %>
    <%= f.input :cycle_position %>
    <%= f.association :periodization_cycle %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
