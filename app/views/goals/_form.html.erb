<div class="row">
<div class="col-md-6 col-md-offset-1">
<%= simple_form_for @goal,
  html: { class: 'form-horizontal' },
  wrapper: :horizontal_form do |f| %>

  <div class="form-inputs">
    <%= f.input :date, as: :date, html5: true %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :priority %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
</div>
</div>