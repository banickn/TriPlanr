<div class="row">
  <div class="col-md-12" id="title"><h1>Goals</h1></div>
</div>
<div class="timeline-centered">
    <% @goals.each do |goal| %>

     <article class="timeline-entry">

            <div class="timeline-entry-inner">

                <%= priorityIcon(goal.priority) %>
                    <i class="entypo-feather"></i>
                </div>

                <div class="timeline-label">
                    <h2><%= goal.title %> <span>(<%= (goal.date - Date.today).to_i %> days to go)</span></h2>
                    <p><%= goal.date %> <%= goal.description %></p>
                </div>
            </div>
        </article>
    <% end %>

        <article class="timeline-entry begin">

            <div class="timeline-entry-inner">

                <div class="timeline-icon" style="-webkit-transform: rotate(-90deg); -moz-transform: rotate(-90deg);">
                    <i class="entypo-flight"></i> <%= link_to '+', new_goal_path %>
                </div>

            </div>

        </article>

</div>

