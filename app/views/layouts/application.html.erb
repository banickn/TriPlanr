<!DOCTYPE html>
<html>
  <head>
    <title>TriPlanr</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-T8Gy5hrqNKT+hzMclPo118YTQO6cYprQmhrYwIiQ/3axmI1hQomh7Ud2hPOy8SP1" crossorigin="anonymous">
  </head>

<body class="home">
    <div class="container-fluid display-table">
        <div class="row display-table-row">
            <div class="col-md-2 col-sm-1 hidden-xs display-table-cell v-align box" id="navigation">
                <div>
                        <%= image_tag("triplanr_logo.png", size: "90", class: "logo") %>
                </div>
                <div class="navi">
                    <ul>
                        <li><%= link_to(goals_path) do%><i class="fa fa-check-square-o" aria-hidden="true"></i> <span class="hidden-xs hidden-sm"> Goals</span><% end %></li>
                        <li><%= link_to(workouts_path) do%><i class="fa fa-calendar" aria-hidden="true"></i> <span class="hidden-xs hidden-sm"> Calendar</span> <% end %></li>
                        <li><%= link_to(pmc_path) do%><i class="fa fa-area-chart" aria-hidden="true"></i> <span class="hidden-xs hidden-sm"> PMC</span><% end %></li>
                        <li><%= link_to(tsscalc_path) do%><i class="fa fa-calculator" aria-hidden="true"></i> <span class="hidden-xs hidden-sm"> TSS</span><% end %></li>
                        <li><%= link_to(tests_path) do%><i class="fa fa-file-text" aria-hidden="true"></i> <span class="hidden-xs hidden-sm"> Tests</span> <% end %> </li>
                        <li><%= link_to(periodization_years_path) do%><i class="fa fa-bar-chart" aria-hidden="true"></i> <span class="hidden-xs hidden-sm">ATP</span><% end %></li>
                        <li><%= link_to(settings_path) do %><i class="fa fa-cog" aria-hidden="true"></i> <span class="hidden-xs hidden-sm"> Settings</span><% end %></li>
                    </ul>
                </div>
            </div>
            <div class="col-md-10 col-sm-11 display-table-cell v-align">
                <!--<button type="button" class="slide-toggle">Slide Toggle</button> -->
                <div class="row">
                    <header>
                        <div class="col-md-7">
                            <nav class="navbar-default pull-left">
                                <div class="navbar-header">
                                    <button type="button" class="navbar-toggle collapsed" data-toggle="offcanvas" data-target="#side-menu" aria-expanded="false">
                                        <span class="sr-only">Toggle navigation</span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                    </button>
                                </div>
                            </nav>
                            <div class="search hidden-xs hidden-sm">
                                <h1><%= @pageTitle if !@pageTitle.nil? %></h1>
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="header-rightside">
                                <ul class="list-inline header-top pull-right">
                                    <li>
                                        <a href="#" class="icon-info">
                                            <i class="fa fa-bell" aria-hidden="true"></i>
                                            <span class="label label-primary">3</span>
                                        </a>
                                    </li>
                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><img src="http://jskrishna.com/work/merkury/images/user-pic.jpg" alt="user">
                                            <b class="caret"></b></a>
                                        <ul class="dropdown-menu">
                                            <li>
                                                <div class="navbar-content">
                                                    <span>User</span>
                                                    <p class="text-muted small">
                                                        mockup@gmail.com
                                                    </p>
                                                    <div class="divider">
                                                    </div>
                                                    <a href="#" class="view btn-sm active">View Profile</a>
                                                </div>
                                            </li>
                                        </ul>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </header>
                </div>
                <div class="user-dashboard">
                    <div class="row">
                        <%= yield %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>