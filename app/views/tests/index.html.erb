<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Title</th>
      <th>Duration</th>
      <th>Power</th>
      <th>Speed</th>
      <th>Distance</th>
      <th>Sport</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td><%= link_to "#{test.date}", test %></td>
        <td><%= test.title %></td>
        <td><%= test.duration %></td>
        <td><%= test.power %></td>
        <td><%= test.speed %></td>
        <td><%= test.distance %></td>
        <td><%= test.sport.name %></td>
        <td><%= link_to edit_test_path(test), :class => 'btn btn-sm btn-primary' do %>
                <span class="glyphicon glyphicon-pencil"></span>
            <% end %>
        <%= link_to test, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-sm btn-primary' do %>
                <span class="glyphicon glyphicon-trash"></span>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to('New Test', new_test_path, :class => 'btn btn-default btn-lg')  %>
