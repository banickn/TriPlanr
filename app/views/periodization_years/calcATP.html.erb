<p id="notice"><%= notice %></p>

<div class="row">

  <div class="col-xs-2">
      <div class="project project-default">
        <div class="project-content">
          
          <p>BIKE GOAL</p>
          <h3 class="lead">
          <%= @year.goal_ctl_bike.to_i %>
          </h3>
        </div>
      </div>
  </div>
  <div class="col-xs-2">
      <div class="project project-default">
        <div class="project-content">
          
          <p>RUN GOAL</p>
          <h3 class="lead">
          <%= @year.goal_ctl_run.to_i %>
          </h3>
        </div>
      </div>
  </div>
  <div class="col-xs-2">
      <div class="project project-default">
        <div class="project-content">
          
          <p>BIKE GOAL</p>
          <h3 class="lead">
          <%= @year.goal_ctl_swim.to_i %>
          </h3>
        </div>
      </div>
  </div>
</div>
<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Date</th>
      <th>Week</th>
      <th>Cycle</th>
      <th>Bike CTL</th>
      <th>Ramp Bike CTL</th>
      <th>Run CTL</th>
      <th>Ramp Run CTL</th>
      <th>Swim CTL</th>
      <th>Ramp Swim CTL</th>
      <th>CTL</th>
    </tr>
  </thead>

  <tbody>
    <% @year.periodization_cycles.each do |cycle| %>
      <% cycle.periodization_weeks.each do |week| %>
        <tr>
          <td><%= week.date %></td>
          <td><%= week.periodization_cycle.title %></td>
          <td><%= week.kind %></td>
          <td><%= week.goal_ctl_bike.to_i %></td>
          <td><%= deltaCTL(week.kind, "Bike") %></td>
          <td><%= week.goal_ctl_run.to_i %></td>
          <td><%= deltaCTL(week.kind, "Run") %></td>
          <td><%= week.goal_ctl_swim.to_i %></td>
          <td><%= deltaCTL(week.kind, "Swim") %></td>
          <td><%= week.goal_ctl_bike.to_i+week.goal_ctl_run.to_i+week.goal_ctl_swim.to_i %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>


