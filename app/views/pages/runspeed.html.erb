<div class="col-md-9">
    <form class="form-horizontal">
      <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">Speed</label>
        <div class="col-sm-10">
          <select class="form-control" id="inputSpeed">
          <%= for n in 0..24 do %>
          <%= runSpeedOptionFormHelper(n) %>
          <% end %>
          </select>
        </div>
      </div>
      <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label">Distance</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="inputDistance" placeholder="W">
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-1">
          <input class="btn btn-default btn-lg" id="calcRunSpeed" value="Calculate">
        </div>
      </div>
    </form>
</div>

<div class="row">
    <div class="col-md-6 col-md-offset-1">
      <table class="table table-striped" id="speedtable">
        <thead>
          <tr>
          </tr>
        </thead>
        <tbody>
        <tr></tr>
        </tbody>
      </table>
    </div>
</div>